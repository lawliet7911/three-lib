{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@three-lib/*": ["packages/*"]
    }
  },
  "include": ["packages/*/src/*", "packages/*/__tests__/*"]
}
